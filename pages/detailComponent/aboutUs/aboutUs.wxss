.aboutUs_content {
  width: 100%;
  height: 100%;
  font-family: "楷体";
}

.aboutUs_header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  background-color: #fff;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.aboutUs_header_icon {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.aboutUs_header_title {
  width: 100%;
  color: #1e88e5;
  font-size: 45rpx;
  text-align: center;
  margin-top: 20rpx;
}

.aboutUs_introd {
  width: 100%;
  height: auto;
  font-size: 34rpx;
  padding: 30rpx 20rpx 20rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  text-indent: 2em;
  text-align: justify;
}

.aboutUs_slogan {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  background-color: #1e88e5;
}

.aboutUs_info {
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  background-color: #fff;
  font-size: 34rpx;
  text-align: justify;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.aboutUs_info_item {
  display: block;
  width: 100%;
  padding: 15rpx 0rpx;
  border-bottom: 1rpx solid #f5f5f5;
  line-height: 50rpx;
}

.aboutUs_copyright {
  margin-top: 120rpx;
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 30rpx;
}

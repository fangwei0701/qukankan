.orderDtail_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.orderDtail_img {
  width: 100%;
  height: 100px;
  overflow: hidden;
}

.orderDtail_img image {
  width: 100%;
  height: 100%;
}

.orderDtail_position_info {
  width: 100%;
  height: auto;
  color: #757575;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx 20rpx 20rpx;
}

.orderDtail_position {
  padding-top: 20rpx;
  overflow: hidden; /* 多余的变成省略号 */
  text-overflow: ellipsis;
  white-space: nowrap;
}

.orderDtail_shop_info {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.orderDtail_shop_name {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}

.orderDtail_shop_body {
  width: 100%;
  height: 150rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  background-color: #fafafa;
}

.goods_img {
  float: left;
  width: 20%;
  height: 100%;
  overflow: hidden;
}

.goods_img image {
  display: block;
  width: auto;
  height: 100%;
}

.goods_content {
  float: right;
  width: 80%;
  font-size: 30rpx;
  line-height: 40rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.orderDtail_footer {
  width: 100%;
  height: auto;
  padding:20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 2px solid #f5f5f5;
  position: fixed;
  bottom: 0;
  left: 0;
}

.orderDtail_footer_btn {
  float: right;
  background-color: #fff;
  padding: 10rpx 25rpx;
  border: 1px solid #f5f5f5;
  border-radius: 8rpx;
  box-shadow: 0 3px 3px -2px rgba(0, 0, 0, 0.2),
                0 3px 4px 0 rgba(0, 0, 0, 0.14),
                0 1px 8px 0 rgba(0, 0, 0, 0.12);
}

.orderDtail_evaluate {
  margin-left: 30rpx;
  color: red;
}

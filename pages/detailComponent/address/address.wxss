.address_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.qukankan_address {
  width: 100%;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.address_title {
  width: 100%;
  height: 100rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address_title_name {
  font-size: 36rpx;
  font-weight: 600;
}

.address_title_phone {
  font-size: 34rpx;
  font-weight: 600;
}

.address_body {
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
  text-indent: 2em;
  font-size: 32rpx;
  padding: 15rpx 20rpx 24rpx;
  text-justify: center;
  line-height: 44rpx;
}

.address_footer {
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
}

.address_footer_select {
  display: flex;
  align-items: center;
}

.edit {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #9e9e9e;
  margin-left: 30rpx;
  border-radius: 12rpx;
}

.address_add {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  background-color: #1976d2;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 10;
}

.shopCart_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  margin-bottom: 120rpx;
}

.shopCart_list {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 20rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.shopCart_list_hd {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
}

.shopCart_select_icon {
  margin-right: 30rpx;
}

.shopCart_shop_home {
  font-size: 34rpx;
}

.shopCart_list_bd {
  display: flex;
  padding: 20rpx 0rpx 20rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
  border-top: 1px solid #f5f5f5;
}

.shopCart_goods_img {
  margin-right: 30rpx;
}

.shopCart_goods_thumb {
  width: 120rpx;
  height: 120rpx;
}

.shopCart_goods {
  font-size: 30rpx;
}

.shopCart_goods_name {
  line-height: 40rpx;
  width: 100%;
}

.shopCart_goods_info {
  padding: 20rpx 0rpx;
}

.shopCart_goods_num {
  padding: 0rpx 35rpx;
}

.shopCart_goods_footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shopCart_goods_pice {
  color: red;
  font-size: 32rpx;
  font-weight: 600;
}

.shopCart_goods_del {
  width: 50rpx;
  height: 50rpx;
}

.shopCart_goods_count {
  width: 100%;
  height: 120rpx;
  color: #fff;
  font-size: 36rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  box-sizing: border-box;
  background-color: #64b5f6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.shopCart_select_all {
  display: flex;
  align-items: center;
}

.select_all {
  padding-left: 30rpx;
}

.total_pice {
  color: red;
  font-weight: 600;
  font-size: 38rpx;
  padding-left: 15rpx;
}

.pay_number {
  padding-left: 30rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.shopCart_none {
  height: 200rpx;
  width: 100%;
  line-height: 200rpx;
  text-align: center;
  font-size: 36rpx;
}

.shopCart_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  margin-bottom: 100rpx;
  font-family: "楷体";
}

.shopCart_list {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 20rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.shopCart_list_hd {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
}

.shopCart_select_icon {
  margin-right: 20rpx;
}

.shopCart_shop_home {
  font-size: 36rpx;
  font-weight: 600;
}

.shopCart_list_bd {
  display: flex;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
}

.shopCart_goods_img {
  margin-right: 20rpx;
}

.shopCart_goods_thumb {
  width: 120rpx;
  height: 120rpx;
}

.shopCart_goods {
  font-size: 30rpx;
}

.shopCart_goods_hd {
  width: 100%;
  height: auto;
}

.shopCart_goods_name {
  width: 100%; /*不能和text-align一起使用*/
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.shopCart_goods_pice {
  color: red;
  font-weight: 600;
  text-align: right;
  margin: 15rpx 6rpx;
}

.shopCart_goods_info {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shopCart_goods_prop {
  color: #616161;
  font-size: 28rpx;
}

.shopCart_goods_edit {
  font-size: 34rpx;
  border: 1px solid #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.shopCart_edit {
  background-color: #f5f5f5;
  font-size: 32rpx;
}

.complete_icon {
  width: 38rpx;
  height: 38rpx;
  display: block;
  margin: 0rpx 0rpx 2rpx 4rpx;
}

.edit_prop {
  display: flex;
  font-size: 30rpx;
  color: #616161;
}

.shopCart_goods_num {
  padding: 0rpx 20rpx;
}

.shopCart_goods_down {
  padding: 0rpx 18rpx;
  background-color: #f5f5f5;
}

/* .edit_icon {
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin-left: 14rpx;
} */

.delete_goods {
  width: 75rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: red;
  color: #fff;
}

.shopCart_goods_count {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 2px solid #f5f5f5;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.shopCart_select_item {
  float: left;
  height: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.shopCart_select_all {
  width: 30%;
  display: flex;
  align-items: center;
}

.select_all {
  padding-left: 20rpx;
}

.shopCart_goods_total {
  width: 40%;
  box-sizing: border-box;
}

.total_pice {
  color: red;
  font-weight: 600;
  font-size: 38rpx;
}

.shopCart_goods_pay {
  width: 30%;
  color: #fff;
  background-color: red;
}

.shopCart_none {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 36rpx;
}

.shopCart_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  margin-bottom: 100rpx;
  font-family: "楷体";
}

.shopCart_list {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 20rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.shopCart_list_hd {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
}

.shopCart_select_icon {
  margin-right: 20rpx;
}

.shopCart_shop_home {
  font-size: 36rpx;
  font-weight: 600;
}

.shopCart_list_bd {
  display: flex;
  padding: 20rpx 0rpx 20rpx 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
}

.shopCart_goods_img {
  margin-right: 20rpx;
}

.shopCart_goods_thumb {
  width: 120rpx;
  height: 120rpx;
}

.shopCart_goods {
  font-size: 30rpx;
}

.shopCart_goods_name {
  width: 100%;
  line-height: 40rpx;
}

.shopCart_goods_info {
  padding: 20rpx 0rpx;
}

.shopCart_goods_num {
  padding: 0rpx 35rpx;
}

.shopCart_goods_footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shopCart_goods_pice {
  color: red;
  font-size: 32rpx;
  font-weight: 600;
}

.shopCart_goods_del {
  width: 50rpx;
  height: 50rpx;
}

.shopCart_goods_count {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 2px solid #f5f5f5;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 10;
}

.shopCart_select_item {
  float: left;
  height: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.shopCart_select_all {
  width: 30%;
  display: flex;
  align-items: center;
}

.select_all {
  padding-left: 20rpx;
}

.shopCart_goods_total {
  width: 40%;
  box-sizing: border-box;
}

.total_pice {
  color: red;
  font-weight: 600;
  font-size: 38rpx;
}

.shopCart_goods_pay {
  width: 30%;
  color: #fff;
  background-color: red;
}

.shopCart_none {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 36rpx;
}

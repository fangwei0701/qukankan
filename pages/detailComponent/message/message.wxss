.message_content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx 20rpx;
}

.message_list {
  width: 100%;
  height: auto;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  margin-bottom: 40rpx;
  background-color: #fff;
  display: flex;
}

.message_user_img {
  width: 14%;
  height: auto;
  padding-right: 15rpx;
}

.message_user_img image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}

.message_list_coontent {
  width: 84%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.user_header {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user_name {
  color: #1e88e5;
  white-space: nowrap;
}

.comment {
  padding: 0rpx 10rpx;
  font-size: 30rpx;
  color: #ff5722;
  white-space: nowrap;
}

.message_info {
  font-size: 30rpx;
  width: auto;
  color: #424242;
  overflow: hidden; /* 多余的变成省略号 */
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user_comment {
  font-size: 30rpx;
  padding-top: 20rpx;
  line-height: 40rpx;
}

.message_list_fd {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.comment_time {
  color: #757575;
}

.message_reply_btn {
  width: 100rpx;
  color: #42a5f5;
  text-align: right;
}

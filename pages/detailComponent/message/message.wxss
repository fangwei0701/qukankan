.message_content {
  width: 100%;
  height: 100%;
  font-family: "楷体";
}

.message_list {
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  background-color: #fff;
  display: flex;
}

.message_user_img {
  width: 10%;
  height: auto;
  padding-right: 15rpx;
}

.message_user_img image {
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}

.message_list_coontent {
  width: 89%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.user_header {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user_name {
  color: #1e88e5;
  white-space: nowrap;
}

.comment {
  padding: 0rpx 10rpx;
  font-size: 30rpx;
  color: #ff5722;
  white-space: nowrap;
}

.zan_img {
  padding: 0rpx 15rpx 6rpx;
  width: 30rpx;
  height: 30rpx;
  display: block;
}

.message_info {
  font-size: 30rpx;
  width: auto;
  color: #424242;
  overflow: hidden; /* 多余的变成省略号 */
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user_comment {
  font-size: 30rpx;
  padding-top: 20rpx;
  line-height: 40rpx;
}

.message_list_fd {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.comment_time {
  color: #757575;
}

.message_reply_btn {
  width: 100rpx;
  color: #42a5f5;
  text-align: right;
}

/*消息回复  */

.reply_message {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.14);
}

.reply_modal {
  width: 100%;
  height: auto;
  padding: 30rpx 20rpx 0rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0rpx;
  background-color: #fff;
}

.reply_input {
  width: 89%;
  padding: 10rpx 0rpx;
  margin-bottom: 40rpx;
}

.cansel_select {
  padding: 10rpx;
  position: absolute;
  right: 0rpx;
  top: 60rpx;
}

.cansel_select::after {
  content: '';
  height: 70rpx;
  border: 1px solid #bdbdbd;
  position: absolute;
  top: -60rpx;
  right: 38rpx;
}

.cansel_icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.reply_btn {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.radio {
  display: flex;
  align-items: center;
}

.submit_reply {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f5f5f5;
  box-shadow: 0 3px 3px -2px rgba(0, 0, 0, 0.2),
                0 3px 4px 0 rgba(0, 0, 0, 0.14),
                0 1px 8px 0 rgba(0, 0, 0, 0.12);
}

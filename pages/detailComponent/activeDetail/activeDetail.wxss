.activeDetail_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  margin-bottom: 100rpx;
}

.active_detail_header {
  max-height: 450rpx;
  overflow: hidden;
}

.active_detail_img {
  height: 450rpx;
  width: 100%;
  vertical-align: middle;
}

/*活动标题部分  */

.active_detail_info {
  width: 100%;
  height: auto;
  padding: 20rpx 20rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.activeDetail_info_name {
  line-height: 45rpx;
  text-align: justify;
  font-size: 36rpx;
}

.activeDetail_pice_person {
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
}

.activeDetail_pice {
  color: red;
  font-size: 34rpx;
  font-weight: 600;
}

.activeDetail_person {
  color: #424242;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}

.person_icon {
  width: 34rpx;
  height: 34rpx;
  padding-right: 8rpx;
  vertical-align: middle;
}

.activeDetail_together_place {
  color: #424242;
  font-size: 30rpx;
  text-align: left;
  padding: 20rpx 0rpx;
}

.activeDetail_destination {
  border-top: 1px solid #f5f5f5;
}

/*组织单位  */

.organization_unit {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.organization_unit_header {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.organiza_img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.organiza_name {
  font-size: 38rpx;
  font-weight: 600;
}

.real_name {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.organization_unit_body {
  width: 100%;
  color: #616161;
  font-size: 32rpx;
  padding: 20rpx 0rpx 0rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
}

/*底部信息  */

.active_detail_footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  box-sizing: border-box;
  border-top: 2px solid #f5f5f5;
  position: fixed;
  bottom: 0;
  z-index: 10;
  display: flex;
  justify-content: space-between;
}

.active_time {
  width: 60%;
  height: 100%;
  text-align: center;
  background-color: #ff9800;
}

.sign_up {
  width: 40%;
  height: 100%;
  color: #fff;
  text-align: center;
  background-color: #1e88e5;
}

/*活动详情说明部分  */

.activeDetail_explain {
  margin-bottom: 30rpx;
  background-color: #fff;
  width: 100%;
  height: auto;
}

.activeDetail_explain_tabnav {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2px solid #f5f5f5;
}

.tabnav_item {
  height: 100%;
  width: 25%;
  font-size: 34rpx;
  text-align: center;
  display: inline-block;
  border-bottom: 2px solid #f5f5f5;
}

.tabnav_item.on {
  color: #1e88e5;
  border-bottom-color: #1e88e5;
}

.activeDetail_explain_list {
  width: 100%;
  height: auto;
  padding: 40rpx 0rpx 20rpx;
}

.activeDetail_explain_bd {
  width: 100%;
  height: 100%;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.explain_item {
  width: 100%;
  height: 100%;
  color: #424242;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}

.explain_item_name {
  width: 100%;
  height: 100%;
  font-weight: 600;
  box-sizing: border-box;
  padding-left: 15rpx;
  margin: 20rpx 0rpx;
  border-left: 2px solid #1e88e5;
}

.explain_item_content {
  width: 100%;
  height: 100%;
  line-height: 50rpx;
}

/*活动介绍  */

.active_introd_item {
  width: 100%;
  height: auto;
  color: #424242;
  line-height: 50rpx;
  text-indent: 2em;
  font-size: 30rpx;
  display: inline-block;
}

.active_introd_fd {
  width: 100%;
  padding: 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.image_enjoy_name {
  width: 100%;
  height: 100%;
  font-weight: 600;
  box-sizing: border-box;
  padding-left: 15rpx;
  margin-bottom: 20rpx;
  border-left: 2px solid #1e88e5;
}

.image_enjoy_item {
  width: 100%;
  height: 100%;
  margin: 10rpx 0rpx;
}

.image_enjoy {
  width: 100%;
  height: 480rpx;
  display: block;
}

/*活动行程  */

.active_route_item {
  width: 100%;
  line-height: 45rpx;
  color: #424242;
  font-size: 30rpx;
  padding-top: 15rpx;
  display: inline-block;
}

/*更多介绍  */

.more_intro_list {
  width: 100%;
  height: auto;
}

.list_title {
  display: block;
  color: #26a69a;
  font-weight: 600;
}

.list_content {
  display: inline-block;
  width: 100%;
  margin: 15rpx 0rpx;
  line-height: 40rpx;
}

.notice_content {
  display: inline-block;
  line-height: 40rpx;
  margin: 8rpx 0rpx;
}

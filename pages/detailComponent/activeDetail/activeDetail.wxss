.activeDetail_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.active_detail_header {
  max-height: 450rpx;
  overflow: hidden;
}

.active_detail_img {
  height: 450rpx;
  width: 100%;
  vertical-align: middle;
}

.active_detail_info {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.activeDetail_info_item {
  padding: 8rpx 0rpx;
  display: flex;
  justify-content: space-between;
}

.activeDetail_pice {
  font-weight: 600;
  color: red;
}

.active_detail_footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  box-sizing: border-box;
  border-top: 2px solid #f5f5f5;
  position: fixed;
  bottom: 0rpx;
  z-index: 10;
  display: flex;
  justify-content: space-between;
}

.active_person {
  width: 60%;
  height: 100%;
  text-align: center;
  background-color:#ff9800;
}

.sign_up {
  width: 40%;
  height: 100%;
  color: #fff;
  text-align: center;
  background-color: #1e88e5;
}

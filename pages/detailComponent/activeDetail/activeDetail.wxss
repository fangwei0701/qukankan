.activeDetail_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  margin-bottom: 100rpx;
}

.active_detail_header {
  max-height: 450rpx;
  overflow: hidden;
}

.active_detail_img {
  height: 450rpx;
  width: 100%;
  vertical-align: middle;
}

/*活动标题部分  */

.active_detail_info {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.activeDetail_info_item {
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
}

.activeDetail_person {
  font-size: 34rpx;
  color: #616161;
}

.activeDetail_pice {
  font-weight: 600;
  color: red;
}

.activeDetail_destination {
  padding: 15rpx 0rpx;
  border-top: 1px solid #f5f5f5;
  margin: 15rpx 0rpx 0rpx;
}

/*组织单位  */

.organization_unit {
  width: 100%;
  height: auto;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.organization_unit_name {
  padding: 25rpx 0rpx;
  display: flex;
  justify-content: space-between;
}

/*底部信息  */

.active_detail_footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  box-sizing: border-box;
  border-top: 2px solid #f5f5f5;
  position: fixed;
  bottom: 0rpx;
  z-index: 10;
  display: flex;
  justify-content: space-between;
}

.active_time {
  width: 60%;
  height: 100%;
  text-align: center;
  background-color: #ff9800;
}

.sign_up {
  width: 40%;
  height: 100%;
  color: #fff;
  text-align: center;
  background-color: #1e88e5;
}

.search_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  font-family: "楷体";
}

/*搜索头部  */

.search_hd {
  width: 100%;
  height: 100rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0rpx;
}

.search_input_item {
  width: 80%;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  position: relative;
}

.search_input {
  width: 100%;
  height: 100%;
  padding-left: 50rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.search_icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  position: absolute;
  top: 50%;
  left: 15rpx;
  transform: translateY(-50%);
}

.search_init {
  width: 15%;
  height: 58rpx;
  font-size: 34rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #fafafa;
  border: 1px solid #f5f5f5;
  box-shadow: 0 3px 3px -2px rgba(0, 0, 0, 0.2),
                0 3px 4px 0 rgba(0, 0, 0, 0.14),
                0 1px 8px 0 rgba(0, 0, 0, 0.12);
}

.search_text {
  color: red;
}

/*热门搜索  */

.search_bd {
  margin-top: 120rpx;
  width: 100%;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.search_item_hd {
  width: 100%;
  height: 80rpx;
  color: red;
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search_item_bd {
  display: flex;
  flex-wrap: wrap;
}

.item_list {
  font-size: 32rpx;
  border-radius: 6rpx;
  padding: 10rpx 15rpx;
  background-color: #f5f5f5;
  margin: 20rpx 30rpx 20rpx 0rpx;
}

.clear {
  font-size: 34rpx;
  margin-right: 22rpx;
}

.history_search {
  color: #212121;
}

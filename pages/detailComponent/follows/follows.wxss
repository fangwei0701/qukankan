.follow_content {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
  padding-top: 30rpx;
}

.follow_list {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.follow_author_img {
  width: 18%;
}

.author_img {
  width: 100rpx;
  height: 100rpx;
  display: block;
}

.follow_author_text {
  width: 74%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.author_name{
  font-size: 34rpx;
}

.author_autograph {
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #616161;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.follow_img {
  width: 8%;
}

.follow_icon {
  width: 42rpx;
  height: 42rpx;
  display: block;
  float: right;
}

.follows_none{
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.follow_content {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
  font-family: "楷体";
}

.follow_header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #e0e0e0;
}

.follow_list {
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.follow_author_img {
  width: 20%;
}

.author_img {
  width: 100rpx;
  height: 100rpx;
  display: block;
}

.follow_author_text {
  width: 70%;
  display: flex;
  font-size: 36rpx;
  flex-direction: column;
  justify-content: space-between;
}

.author_autograph {
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #616161;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.follow_img {
  width: 10%;
}

.follow_icon {
  width: 42rpx;
  height: 42rpx;
  display: block;
  float: right;
}

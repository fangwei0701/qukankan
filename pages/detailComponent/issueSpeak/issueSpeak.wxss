.issue_content {
  width: 100%;
  height: 100%;
  font-family: "楷体";
}

.issue_finish {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 36rpx;
  padding: 0rpx 32rpx;
  box-sizing: border-box;
  background-color: #2196f3;
  text-align: right;
}

.issue_btn {
  padding: 20rpx 6rpx 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 40rpx;
}

.section_textarea {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.address_textarea {
  font-size: 34rpx;
  width: 100%;
  text-align: justify;
}

.issue_other {
  width: 100%;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.issue_img {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.issue_img_item {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin: 15rpx 12rpx;
  overflow: hidden;
  border: 1px solid #bdbdbd;
}

.updata_icon {
  width: 100%;
  height: 100%;
  display: block;
}

.issue_palce {
  width: 100%;
  height: 100rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  border-top: 1px solid #bdbdbd;
}

.issue_place_icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

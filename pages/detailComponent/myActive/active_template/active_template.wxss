.myActive_list {
  width: 100%;
  padding: 20rpx 30rpx 0rpx;
  height: auto;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.myActive_list_header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  position: relative;
}

.myActive_list_icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.myActive_list_body {
  width: 100%;
  height: 120rpx;
  margin: 20rpx 0rpx;
  box-sizing: border-box;
}

.myActive_list_img {
  float: left;
  width: 30%;
  height: 100%;
  overflow: hidden;
}

.myActive_list_content {
  float: right;
  width: 70%;
  height: 100%;
  line-height: 40rpx;
  color: #616161;
  font-size: 32rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.myActive_list_img image {
  display: block;
  width: auto;
  height: 100%;
}

.myActive_list_footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.myActive_list_place {
  color: #616161;
  font-size: 30rpx;
  position: relative;
  padding-left: 54rpx;
}

.plice_icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.myActive_list_state {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid #e0e0e0;
  box-shadow: 0 3px 3px -2px rgba(0, 0, 0, 0.2),
                0 3px 4px 0 rgba(0, 0, 0, 0.14),
                0 1px 8px 0 rgba(0, 0, 0, 0.12);
}

.issueActive_list_person {
  color: #616161;
  font-size: 30rpx;
}

.issueActive_list_title {
  position: relative;
}

.issueActive_list_time {
  padding-right: 15rpx;
}

.myActive_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.qukankan_myActive_header {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  position: fixed;
  top: 0;
}

.myActive_tab_item {
  width: 50%;
  text-align: center;
  font-size: 36rpx;
  box-sizing: border-box;
  border-bottom: 2px solid #f5f5f5;
  position: relative;
}

.myActive_tab_item.on {
  color: #1e88e5;
  border-bottom-color: #1e88e5;
}

.tab_item_right::after {
  content: "";
  width: 2px;
  height: 18px;
  background-color: #f5f5f5;
  position: absolute;
  right: 0rpx;
  top: 30rpx;
}

.qukankan_myActive_content {
  width: 100%;
  height: 100%;
  margin-top: 120rpx;
}

.myActive_list {
  width: 100%;
  padding: 20rpx 30rpx;
  height: auto;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.myActive_list_header {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}

.myActive_list_title {
  float: left;
  font-size: 34rpx;
}

.myActive_list_icon {
  float: right;
  width: 100rpx;
  height: 100rpx;
}

.myActive_list_body {
  width: 100%;
  height: 180rpx;
  margin: 30rpx 0rpx;
  box-sizing: border-box;
}

.myActive_list_img {
  float: left;
  width: 30%;
  height: 180rpx;
  overflow: hidden;
}

.myActive_list_img image {
  display: block;
  width: auto;
  height: 100%;
}

.myActive_list_footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.myActive_list_state {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1px solid #1e88e5;
}

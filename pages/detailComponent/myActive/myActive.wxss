@import "active_template/active_template.wxss";

.myActive_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.qukankan_myActive_header {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 10;
}

.myActive_tab_item {
  width: 50%;
  text-align: center;
  font-size: 36rpx;
  box-sizing: border-box;
  border-bottom: 2px solid #f5f5f5;
  position: relative;
}

.myActive_tab_item.on {
  color: #1e88e5;
  border-bottom-color: #1e88e5;
}

.tab_item_right::after {
  content: "";
  width: 2px;
  height: 18px;
  background-color: #f5f5f5;
  position: absolute;
  right: 0rpx;
  top: 30rpx;
}

.qukankan_myActive_content {
  width: 100%;
  height: 100%;
  margin-top: 110rpx;
}

.start_color {
  color: #ff9800;
}

.finish_color {
  color: #616161;
}

.goodsDetail_content {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
  padding-top: 119rpx;
  margin-bottom: 110rpx;
  font-family: "楷体";
}

/*头部位置  */

.goodsDetail_tabnav {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: -1rpx;
  z-index: 10;
}

.tabnav_list {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 36rpx;
  box-sizing: border-box;
  border-top: 3px solid #fff;
  position: relative;
}

.tabnav_list.on {
  color: #ff5722;
  border-top-color: #ff5722;
}

/*基本信息  */

.basic_nfo {
  width: 100%;
  height: auto;
}

.kankan_swiper {
  position: relative;
  width: 100%;
}

.kankan_swiper_bd {
  width: 100%;
  height: 700rpx;
}

.kankan_swiper_bd .swImg {
  height: 100%;
  width: 100%;
}

.kankan_swiper_fd {
  display: flex;
  position: absolute;
  right: 10rpx;
  top: 690rpx;
}

.kankan_swiper_fd .dot {
  margin: 0 10rpx;
  width: 16rpx;
  height: 4rpx;
  background-color: #757575;
  transition: all 0.6s;
}

.kankan_swiper_fd .dot.active {
  background-color: white;
}

.goods_basic_info {
  width: 100%;
  height: auto;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.goods_name {
  font-size: 36rpx;
  line-height: 45rpx;
  text-justify: inter-cluster;
}

.goods_pice {
  padding: 20rpx 0rpx;
  font-size: 40rpx;
  display: flex;
  justify-content: space-between;
}

.vip_price {
  font-weight: 600;
  color: red;
}

.original_price {
  color: #616161;
  font-size: 32rpx;
  text-decoration: line-through;
}

.goods_place {
  display: flex;
  justify-content: space-between;
  color: #616161;
  font-size: 30rpx;
}

.goods_store {
  width: 100%;
  height: auto;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.store_info_header {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}

.store_img {
  width: 100rpx;
  height: 100rpx;
  padding-right: 30rpx;
}

.store_name {
  font-weight: 600;
}

.store_info_body {
  width: 100%;
  border-top: 1px solid #f5f5f5;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.follow_number {
  font-size: 36rpx;
  color: #616161;
}

.join_store {
  padding: 10rpx 20rpx;
  border: 1px solid #f5f5f5;
  border-radius: 10rpx;
  box-shadow: 0 3px 3px -2px rgba(0, 0, 0, 0.2),
                0 3px 4px 0 rgba(0, 0, 0, 0.14),
                0 1px 8px 0 rgba(0, 0, 0, 0.12);
}

/*底部消息  */

.goodsDetail_footer {
  width: 100%;
  height: 110rpx;
  border-top: 2px solid #f5f5f5;
  background-color: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 10;
}

.customer_item {
  float: left;
  text-align: center;
  height: 100%;
  font-size: 36rpx;
}

.customer_follow {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 20%;
  font-size: 34rpx;
}

.customer_cart {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 34rpx;
  width: 20%;
}

.customer_icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.jion_cart {
  width: 30%;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #ff9800;
}

.start_pay {
  width: 30%;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #e64a19;
}

/*商品信息  */

.goods_info {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.goods_info_adverts {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #f5f5f5;
}

.goods_info_item {
  width: 100%;
  height: 100%;
}

.goods_info_img {
  display: block;
  width: 100%;
  height: 1200rpx;
}

/*顾客点评  */

.customer_reviews {
  width: 100%;
  height: auto;
  background-color: #f5f5f5;
}

.margin_color {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
}

.customer_reviews_list {
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.customer_reviews_hd {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
}

.customer_reviews_name {
  font-size: 34rpx;
  color: #03a9f4;
  font-weight: 600;
}

.customer_reviews_time {
  color: #616161;
  font-size: 30rpx;
}

.customer_reviews_bd {
  text-indent: 2em;
  font-size: 32rpx;
  text-align: justify;
  line-height: 45rpx;
}

.customer_reviews_fd {
  font-size: 30rpx;
  color: #616161;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

/*商品属性选择  */

.select_goods_modal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: -0rpx;
  z-index: 20;
  background-color: rgba(0, 0, 0, 0.14);
}

.select_goods_prop {
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 0rpx;
  background-color: #fff;
}

.select_goods_hd {
  height: 100%;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
}

.goods_color_img {
  height: 150rpx;
  width: 20%;
  border: 1px solid #f5f5f5;
}

.goods_img {
  display: block;
  width: auto;
  height: 100%;
}

.goods_total_numb {
  width: 80%;
  height: 150rpx;
  display: flex;
  padding-left: 40rpx;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: space-around;
}

.total_numb {
  font-size: 34rpx;
}

.cansel_select {
  padding: 10rpx;
  position: absolute;
  right: 20rpx;
  top: 50rpx;
}

.cansel_select::after {
  content: '';
  height: 60rpx;
  border: 1px solid #bdbdbd;
  position: absolute;
  top: -50rpx;
  right: 38rpx;
}

.cansel_icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.goods_num {
  padding: 0rpx 20rpx;
}

.goods_down {
  padding: 0rpx 18rpx;
  background-color: #f5f5f5;
}

.select_color {
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.select_item_hd {
  width: 100%;
  padding: 15rpx 0rpx;
}

.select_item_bd {
  display: flex;
  flex-wrap: wrap;
}

.select_classifty {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  margin: 20rpx 40rpx 20rpx 0rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.select_complete {
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.my_select_prop {
  font-size: 32rpx;
  color: #ff5722;
}

.select_color {
  margin: 0rpx 30rpx;
}

.select_confirm {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: red;
}

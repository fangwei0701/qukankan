/*编辑数量  */

.goods_num {
  padding: 0rpx 20rpx;
}

.goods_down {
  padding: 0rpx 18rpx;
  background-color: #f5f5f5;
}

/*顾客评论  */

.customer_reviews_list {
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.customer_reviews_hd {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
}

.customer_reviews_name {
  font-size: 34rpx;
  color: #03a9f4;
  font-weight: 600;
}

.customer_reviews_time {
  color: #616161;
  font-size: 30rpx;
}

.customer_reviews_bd {
  text-indent: 2em;
  font-size: 32rpx;
  text-align: justify;
  line-height: 45rpx;
}

.customer_reviews_fd {
  font-size: 30rpx;
  color: #616161;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

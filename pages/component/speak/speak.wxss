.speak_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.qukankan_speak_tab {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 10;
}

.speak_tab_item {
  float: left;
  width: 20%;
  height: 100%;
  font-weight: 500;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 2px solid #f5f5f5;
  position: relative;
}

.speak_add_icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 50rpx;
  top: 24rpx;
}

.speak_tab_item.on {
  color: #1e88e5;
  border-bottom-color: #1e88e5;
}

.tab_border_right::after {
  content: "";
  height: 18px;
  width: 1px;
  background-color: #f5f5f5;
  position: absolute;
  top: 32rpx;
  right: 0px;
}

.qukankan_speak_detail {
  width: 100%;
  height: auto;
  margin-top: 120rpx;
}

.speak_detail_item {
  width: 100%;
  height: auto;
  display: flex;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.speak_detail_left {
  width: 18%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 22rpx;
  box-sizing: border-box;
}

.speak_detail_img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 10rpx;
}

.speak_detail_right {
  width: 82%;
  height: 100%;
}

.detail_right_hd {
  height: 50rpx;
  line-height: 50rpx;
  padding: 15rpx 30rpx 15rpx 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.speak_detail_text {
  text-align: center;
  font-size: 32rpx;
  width: auto;
}

.detail_right_hd_img {
  width: 36rpx;
  height: 36rpx;
  display: block;
}

.detail_right_bd {
  text-indent: 2em;
  font-size: 32rpx;
  padding: 15rpx;
  text-justify: center;
  line-height: 44rpx;
}

.detail_right_fd {
  height: 40rpx;
  line-height: 40rpx;
  padding: 15rpx;
  font-size: 29rpx;
  display: flex;
  justify-content: space-between;
  color: #9e9e9e;
}
.detail_right_user {
  display: flex;
  align-items: center;
}

.detail_right_link {
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.icon_img {
  width: 30rpx;
  height: 30rpx;
  margin: 0rpx 15rpx;
}

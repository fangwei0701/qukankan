.speak_content {
  width: 100%;
  height: 100%;
}

.qukankan_speak_tab {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #f5f5f5;
  font-size: 34rpx;
  position: fixed;
  top: -1rpx;
  z-index: 10;
}

.speak_tab_item {
  float: left;
  width: 25%;
  text-align: center;
}

.qukankan_speak_detail {
  margin-top: 100rpx;
  width: 100%;
  height: auto;
}

.speak_detail_item {
  width: 100%;
  height: auto;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 30rpx;
}

.speak_detail_left {
  width: 20%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 15rpx;
  border-right: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.speak_detail_img {
  width: 80rpx;
  height: 80rpx;
  display: block;
}

.speak_detail_text {
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
}

.speak_detail_right {
  width: 80%;
  height: 100%;
}

.detail_right_hd {
  height: 40rpx;
  line-height: 40rpx;
  padding: 15rpx 30rpx 15rpx 15rpx;
   border-bottom: 1px solid #f5f5f5; 
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail_right_hd_time {
  font-size: 26rpx;
}

.detail_right_hd_img {
  width: 30rpx;
  height: 30rpx;
  display: block;
}

.detail_right_bd {
  text-indent: 2em;
  font-size: 30rpx;
  padding: 15rpx;
  text-justify: center;
   border-bottom: 1px solid #f5f5f5; 
}

.detail_right_fd{
  height: 40rpx;
  line-height: 40rpx;
  padding: 15rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-end;
}


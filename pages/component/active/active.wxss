.active_content {
  background-color: #f5f5f5;
  height: 100%;
}

.kankan_position {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.kankan_position_content {
  font-size: 32rpx;
  width: 20%;
}

.kankan_position_icon {
  width: 34rpx;
  height: 34rpx;
  margin: -2rpx 14rpx 10rpx 0rpx;
  vertical-align: middle;
}

.kankan_search {
  width: 80%;
}

.kankan_search_input {
  background-color: #fff;
  font-size: 28rpx;
  padding-left: 25rpx;
  border-radius: 20rpx;
  border: 1px solid #eee;
}

.qukankan_active {
  width: 100%;
  height: auto;
}

.qukankan_active_left {
  float: left;
  width: 20%;
  height: 100%;
  border-right: 2px solid #f5f5f5;
  box-sizing: border-box;
}

.qukankan_active_left .qukankan_active_list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
  font-size: 34rpx;
}

.qukankan_active_left .qukankan_active_list.on {
  color: #1e88e5;
  border-color: #1e88e5;
}

.qukankan_active_right {
  float: right;
  width: 80%;
  height: auto;
  background-color: #f5f5f5;
}

.qukankan_active_detail {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 15rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.active_detail_img {
  float: left;
  width: 40%;
  height: 180rpx;
  overflow: hidden;
}

.active_detail_img image {
  display: block;
  width: auto;
  height: 100%;
}

.active_detail_content {
  float: left;
  height: 180rpx;
  width: 60%;
  font-size: 30rpx;
  padding: 10rpx 0rpx 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.active_detail_title {
  text-align: justify;
}

.active_detail_pice {
  font-size: 36rpx;
  color: red;
}

.active_detail_time {
  color: #616161;
}

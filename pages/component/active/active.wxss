.active_content {
  background-color: #f5f5f5;
  height: 100%;
}

.kankan_position {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.kankan_position_content {
  font-size: 32rpx;
  width: 20%;
}

.kankan_position_icon {
  width: 34rpx;
  height: 34rpx;
  margin: -2rpx 14rpx 10rpx 0rpx;
  vertical-align: middle;
}

.kankan_search {
  width: 80%;
}

.kankan_search_input {
  background-color: #fff;
  font-size: 28rpx;
  padding-left: 25rpx;
  border-radius: 20rpx;
  border: 1px solid #eee;
}

.qukankan_active {
  width: 100%;
  height: 100%;
}

.qukankan_active_left {
  float: left;
  width: 20%;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}

.qukankan_active_left .qukankan_active_list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
  font-size: 34rpx;
}

.qukankan_active_left .qukankan_active_list.on {
  color: #ab956d;
  border-color: #ab956d;
}

.qukankan_active_right {
  /* border-left: 1px solid #ddd; */
  /* box-sizing: border-box; */
  float: right;
  width: 80%;
  height: 300rpx;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
}

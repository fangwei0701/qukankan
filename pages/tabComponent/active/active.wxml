<view class="active_content">

  <!--趣看看定位位置  -->
  <view class="kankan_position">
    <view class="kankan_position_content">
      <image src="../../../image/icon/gps_active.png" class="kankan_position_icon"></image>
      <text class="kankan_position_text">贵阳</text>
    </view>
    <view class="kankan_search">
      <input class="kankan_search_input" placeholder="搜索：徒步、摄影……" placeholder-style=" font-family: '楷体';" />
    </view>
  </view>

  <!--趣看看活动分类  -->
  <view class="qukankan_active">
    <!--分类TAB  -->
    <view class="qukankan_active_left">
      <view wx:for="{{detailData}}" wx:key="index" data-index="{{index}}" bindtap="switchTab" class="qukankan_active_list {{currentIndex === index?'on':''}}">{{item.title}}</view>
      <view class="active_tab_item">
        <image src="../../../image/icon/add.png" class="active_add_icon"></image>
      </view>
    </view>
    <!--详情分类  -->
    <scroll-view scroll-y="true" class="qukankan_active_right">
      <block wx:for="{{details}}" wx:for-item="detailData" wx:key="idIndex">
        <view class="qukankan_active_detail">
          <navigator class="active_detail_header" url="../../detailComponent/activeDetail/activeDetail">
            <view class="active_detail_img">
              <image src="{{detailData.imgUrl}}"></image>
            </view>
            <view class="active_detail_title">{{detailData.name}}</view>
          </navigator>
          <view class="active_detail_content">
            <view class="active_detail_place">
              <image class="place_icon" src="../../../image/icon/start.png"></image>
              <text class="place_time">{{detailData.time}}</text>
              <text class="place_goon">{{detailData.place}}出发</text>
            </view>
            <view class="active_detail_pice">¥{{detailData.pice}}</view>
          </view>
        </view>
      </block>
    </scroll-view>
  </view>
</view>
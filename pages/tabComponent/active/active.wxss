.active_content {
  background-color: #f5f5f5;
  height: 100%;
  width: 100%;
}

.kankan_position {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  position: fixed;
  top: 0;
  z-index: 10;
}

.kankan_position_content {
  width: 20%;
  height: 100%;
  float: left;
  font-size: 36rpx;
  position: relative;
}

.kankan_position_icon {
  width: 34rpx;
  height: 34rpx;
  margin: -2rpx 14rpx 10rpx 0rpx;
  position: absolute;
  top: 50%;
  left: 0rpx;
  transform: translateY(-50%);
}

.kankan_position_text{
  height: 100%;
  display: inline-block;
  padding-left: 50rpx;
}

.kankan_search {
  float: right;
  width: 80%;
  height: 100%;
  padding-top: 22rpx;
  box-sizing: border-box;
}

.kankan_search_input {
  background-color: #fff;
  font-size: 28rpx;
  padding-left: 25rpx;
  border-radius: 20rpx;
  border: 1px solid #eee;
}

.qukankan_active {
  width: 100%;
  height: 1080rpx;
  margin-top: 100rpx;
}

.qukankan_active_left {
  float: left;
  width: 20%;
  height: 100%;
  border-right: 3px solid #f5f5f5;
  box-sizing: border-box;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  top: 100rpx;
}

.qukankan_active_left .qukankan_active_list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
  font-size: 36rpx;
}

.active_tab_item{
  height: 100rpx;
  text-align: center;
  border-top: 2px solid #eee;
  border-bottom: 2px solid #eee;
}

.active_add_icon{
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.qukankan_active_left .qukankan_active_list.on {
  color: #1e88e5;
  font-weight: 600;
  border-color: #1e88e5;
}

.qukankan_active_right {
  float: right;
  width: 80%;
  height: 100%;
  overflow: hidden;
}

.qukankan_active_detail {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 15rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.active_detail_header {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
}

.active_detail_img {
  width: 38%;
  height: 150rpx;
  overflow: hidden;
}

.active_detail_img image {
  display: block;
  width: auto;
  height: 100%;
}

.active_detail_title {
  width: 62%;
  height: 100%;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: justify;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.active_detail_content {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.active_detail_place {
  float: left;
  color: #616161;
  font-size: 30rpx;
  padding-left: 50rpx;
  position: relative;
}

.place_icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 50%;
  left: 0rpx;
  transform: translateY(-50%);
}

.place_time {
  padding-right: 15rpx;
}

.active_detail_pice {
  float: right;
  font-size: 36rpx;
  color: red;
  margin-right: 20rpx;
}

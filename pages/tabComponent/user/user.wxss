.user_content {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.qukankan_user_header {
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #2196f3;
  color: #fff;
  position: relative;
}

.user_header_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 30rpx;
  top: 22rpx;
  border: 2px solid #fff;
}

.user_header_content {
  height: 100%;
  padding: 0rpx 0rpx 10rpx 150rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user_header_name {
  font-size: 36rpx;
}

.user_header_info {
  font-size: 26rpx;
}

.qukankan_user_follow {
  display: flex;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  background-color: #fff;
  justify-content: space-around;
}

.qukankan_user_order {
  margin-top: 30rpx;
  background-color: #fff;
}

.user_order_title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  padding: 0rpx 10rpx 0rpx 100rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}

.user_icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  left: 30rpx;
  transform: translateY(-50%);
}

.user_right_arrow {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 26rpx;
}

.user_order_bd {
  width: 100%;
  height: auto;
  text-align: center;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.user_order_list {
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order_icon {
  width: 70rpx;
  height: 70rpx;
  padding: 20rpx;
}

.qukankan_user_info {
  margin-top: 30rpx;
  background-color: #fff;
}

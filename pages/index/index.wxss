.main {
  background-color: #f5f5f5;
  font-family: "楷体";
}

/*轮播图*/

.kankan_swiper {
  position: relative;
  width: 100%;
}

.kankan_swiper_bd {
  width: 100%;
  height: 360rpx;
}

.kankan_swiper_bd .swImg {
  height: 100%;
  width: 100%;
}

.kankan_swiper_fd {
  display: flex;
  position: absolute;
  right: 30rpx;
  top: 344rpx;
}

.kankan_swiper_fd .dot {
  margin: 0 10rpx;
  width: 16rpx;
  height: 4rpx;
  background-color: #757575;
  transition: all 0.6s;
}

.kankan_swiper_fd .dot.active {
  background-color: white;
}

/*趣看看宝典  */

.kankan_book {
  margin: 40rpx 0rpx 20rpx;
  text-align: center;
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
  background-color: #fff;
}

.kankan_book_hd {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  align-items: center;
}

.kankan_book_icon {
  width: 70rpx;
  height: 70rpx;
  padding: 20rpx;
}

/*趣看看精品专题区  */

.kankan_special_active {
  width: 100%;
}

.special_active_hd {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}

.special_equip_hd {
  /*解决小屏手机下两条线不存在的问题  */
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  position: relative;
}

.special_active_title {
  font-weight: bold;
}

.special_active_title::before {
  content: " ";
  position: absolute;
  left: 150rpx;
  top: 50%;
  width: 120rpx;
  height: 2rpx;
  background-color: #757575;
}

.special_active_title::after {
  content: " ";
  position: absolute;
  right: 150rpx;
  top: 50%;
  width: 120rpx;
  height: 2rpx;
  background-color: #757575;
}

.special_active_bd {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 20rpx 0rpx;
  box-sizing: border-box;
}

.special_active_item {
  border: 1px solid #e0e0e0;
  height: 250rpx;
  width: 100%;
  color: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.special_active_img {
  display: block;
  width: auto;
  height: 100%;
}

.special_active_info {
  position: absolute;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  padding: 0px 17px 0rpx 10rpx;
  bottom: 0;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.5);
}

.special_active_name {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.special_active_icon {
  display: block;
  height: 36rpx;
  width: 36rpx;
  position: absolute;
  right: 4px;
  top: 12rpx;
}

/*装备  */

.special_equip_bd {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
}

.special_equip_item {
  float: left;
  height: auto;
  width: 50%;
  padding: 15rpx 10rpx;
  border-bottom: 3px solid #f5f5f5;
  border-left: 3px solid #f5f5f5;
  box-sizing: border-box;
  overflow: hidden;
}

.special_equip_right {
  border-left: 0 none;
}

.special_equip_img {
  display: block;
  height: 340rpx;
  width: 100%;
}

.special_equip_text {
  padding-top: 18rpx;
  font-size: 32rpx;
}

.special_equip_title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.special_equip_pice {
  padding-top: 10rpx;
  color: red;
  font-size: 36rpx;
  font-weight: 600;
}

.main {
  background-color: #f5f5f5;
}

/*轮播图*/

.kankan_swiper {
  position: relative;
  width: 100%;
}

.kankan_swiper_bd {
  width: 100%;
  height: 360rpx;
}

.kankan_swiper_bd .swImg {
  height: 100%;
  width: 100%;
}

.kankan_swiper_fd {
  display: flex;
  position: absolute;
  right: 30rpx;
  top: 344rpx;
}

.kankan_swiper_fd .dot {
  margin: 0 10rpx;
  width: 16rpx;
  height: 4rpx;
  background-color: #757575;
  transition: all 0.6s;
}

.kankan_swiper_fd .dot.active {
  background-color: white;
}

/*趣看看生活圈  */

.kankan_live {
  margin: 30rpx 0rpx 30rpx;
  display: flex;
  color: #fff;
  width: 100%;
  height: 240rpx;
  line-height: 240rpx;
  font-weight: bold;
  text-align: center;
}

.kankan_live_active {
  height: 100%;
  width: 33.3%;
  background: url(../../image/live.jpg) no-repeat;
  background-size: cover;
  background-position: 30% 40%;
}

.kankan_live_equip {
  height: 100%;
  width: 33.3%;
  background: url(../../image/equip.jpg) no-repeat;
  background-size: cover;
  background-position: 65% 50%;
}

.kankan_live_speak {
  height: 100%;
  width: 33.4%;
  background: url(../../image/tucao.jpg) no-repeat;
  background-size: cover;
  background-position: 50% 50%;
}

/*趣看看宝典  */

.kankan_book {
  margin: 30rpx 0rpx 20rpx;
  text-align: center;
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
  background-color: #fff;
}

.kankan_book_hd {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.kankan_book_icon {
  width: 70rpx;
  height: 70rpx;
  padding: 20rpx;
}

/*趣看看精品专题区  */

.kankan_special_active {
  width: 100%;
}

.special_active_hd {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}

.special_equip_hd { /*解决小屏手机下两条线不存在的问题  */
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  position: relative;
}

.special_active_title {
  font-weight: bold;
}

.special_active_title::before {
  content: " ";
  position: absolute;
  left: 150rpx;
  top: 50%;
  width: 120rpx;
  height: 2rpx;
  background-color: #757575;
}

.special_active_title::after {
  content: " ";
  position: absolute;
  right: 150rpx;
  top: 50%;
  width: 120rpx;
  height: 2rpx;
  background-color: #757575;
}

.special_active_bd {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 20rpx 0rpx;
  box-sizing: border-box;
}

.special_active_item {
  border: 1px solid #e0e0e0;
  height: 250rpx;
  width: 100%;
  color: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.special_active_item_bd {
  position: absolute;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  padding: 0px 12px;
  bottom: 0rpx;
  left: 0rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.5);
}

.special_active_icon {
  height: 36rpx;
  width: 36rpx;
  position: absolute;
  right: 15px;
  top: 12rpx;
}

/*装备  */

.special_equip_bd {
  width: 100%;
  background-color: #fff;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.special_equip_item {
  padding: 5rpx 10rpx 20rpx 10rpx;
  height: auto;
  width: 50%;
  color: #000;
  box-sizing: border-box;
  overflow: hidden;
}

.special_equip_img {
  display: block;
  height: 340rpx;
  width: 100%;
}

.special_equip_text {
  padding-top: 18rpx;
  font-size: 34rpx;
}

.special_equip_pice {
  padding-top: 10rpx;
  color: red;
  font-size: 38rpx;
  font-weight: 600;
}
